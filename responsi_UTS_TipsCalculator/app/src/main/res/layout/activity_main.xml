<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.muhammad.rijal.falansyah.putra.responsi_uts_tipscalculator.MainActivity">

    <TextView
        android:id="@+id/text1"
        android:text="Tagihan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/input1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"/>
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:text="Persen Tip"
        android:gravity="center_vertical"
        android:layout_height="50dp"
        android:layout_below="@+id/input1"/>
    <EditText
        android:id="@+id/input2"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_below="@+id/input1"
        android:layout_toRightOf="@+id/text2"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="%"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/input2"
        android:layout_height="50dp"
        android:layout_below="@+id/input1"/>
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:text="Jumlah Orang"
        android:gravity="center_vertical"
        android:layout_height="50dp"
        android:layout_below="@+id/input2"/>
    <EditText
        android:id="@+id/input3"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/input2"
        android:layout_toRightOf="@+id/text3"/>
    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input3"
        android:text="Hitung"
        android:onClick="calculate"/>
    <TextView
        android:id="@+id/result"
        android:layout_below="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>

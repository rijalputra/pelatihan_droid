<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.muhammad.rijal.falansyah.putra.uas.DetailActivity">

    <TextView
    android:id="@+id/txt1"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:text="Detail Penjualan Handphone"
    android:textSize="20dp"
    android:textStyle="bold"
    android:textAlignment="center"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_below="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Kode      :"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/det_kode"
        android:layout_below="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="____________"/>
    <TextView
        android:id="@+id/txt3"
        android:layout_below="@+id/det_kode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Merk      :"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/det_jenis"
        android:layout_below="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="____________"/>
    <TextView
    android:id="@+id/txt4"
    android:layout_below="@+id/det_jenis"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="18dp"
    android:text="Harga :"
    android:textStyle="bold"/>
    <TextView
        android:id="@+id/det_harga"
        android:layout_below="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="____________"/>
    <TextView
        android:id="@+id/txt5"
        android:layout_below="@+id/det_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Jumlah :"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/det_jumlah"
        android:layout_below="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="____________"/>
    <TextView
        android:id="@+id/txt6"
        android:layout_below="@+id/det_jumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Total     :"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/det_total"
        android:layout_below="@+id/txt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="____________"/>
</RelativeLayout>
